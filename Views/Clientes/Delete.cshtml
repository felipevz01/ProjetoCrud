@model ProjetoCrud.Models.Cliente

<h2>Excluir Cliente</h2>

<h4>Tem certeza de que deseja excluir este cliente?</h4>
<div>
    <h4>@Model.Nome</h4>
    <dl class="row">
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Telefone</dt>
        <dd class="col-sm-10">@Model.Telefone</dd>

        <dt class="col-sm-2">Endereço</dt>
        <dd class="col-sm-10">@Model.Logradouro, @Model.Numero - @Model.Complemento</dd>

        <dt class="col-sm-2">Bairro</dt>
        <dd class="col-sm-10">@Model.Bairro</dd>

        <dt class="col-sm-2">Cidade</dt>
        <dd class="col-sm-10">@Model.Cidade</dd>

        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">@Model.Estado</dd>

        <dt class="col-sm-2">CEP</dt>
        <dd class="col-sm-10">@Model.Cep</dd>

        <dt class="col-sm-2">Tipo</dt>
        <dd class="col-sm-10">@Model.Tipo</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
